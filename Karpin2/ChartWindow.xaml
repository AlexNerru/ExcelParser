<Window x:Class="Karpin2.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:dvc="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization" Width="842.3">
    <Grid>
        <Label Content="Выбирите колонку для построения диаграммы:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="275"/>
        <WindowsFormsHost Margin="0,90,-0.4,0">
            <dvc:Chart x:Name="chart" />
        </WindowsFormsHost>
        <ComboBox x:Name="ColumnNamesComboBox" HorizontalAlignment="Left" Margin="25,41,0,0" VerticalAlignment="Top" Width="245"/>
        <Button x:Name="ShowChartButton" Content="Построить" HorizontalAlignment="Left" Margin="715,55,0,0" VerticalAlignment="Top" Width="85" Height="20" Click="ShowChartButton_Click"/>
        <ComboBox x:Name="ChartTypeComboBox" HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top" Width="230"/>
        <Label Content="Выберите тип диаграммы:" HorizontalAlignment="Left" Margin="350,10,0,0" VerticalAlignment="Top" Width="275"/>
    </Grid>
</Window>
